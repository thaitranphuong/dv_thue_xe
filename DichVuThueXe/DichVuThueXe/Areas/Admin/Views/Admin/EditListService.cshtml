@model DichVuThueXe.Models.DichVu
@{
    ViewBag.Title = "EditListService";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    <div class="row" style="padding-left:2%">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="font-weight:bold; font-size:20px">
                    Thông Tin Chỉnh Sửa
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "textdanger" })
                                    @Html.HiddenFor(model => model.id)
                                    <div class="form-group">
                                        <label class="text">
                                            Tên: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        </label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.Ten, new
                                            {
                                           htmlAttributes = new { @class = "form-control" }
                                            })
                                            @Html.ValidationMessageFor(model =>
                                           model.Ten, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="text">
                                            Xe: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        </label>
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(model => model.MaXe, ViewBag.MaXe as SelectList, "--Chọn Xe--", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model =>
                                           model.MaXe, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="text">
                                            Địa Điểm: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        </label>
                                        <div class="col-md-10">
                                            @Html.DropDownListFor(model => model.MaTinh, ViewBag.MaTinh as SelectList, "--Chọn Địa Điểm--", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.MaTinh,
                                           "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="text">
                                            Ngày Bắt Đầu: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        </label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.NgayBD, new
                                            {
                                           htmlAttributes = new { @class = "form-control" }
                                            })
                                            @Html.ValidationMessageFor(model =>
                                            model.NgayBD, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="text">
                                            Ngày Kết Thúc: &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                        </label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.NgayKT, new
                                            {
                                           htmlAttributes = new { @class = "form-control" }
                                            })
                                            @Html.ValidationMessageFor(model =>
                                            model.NgayKT, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Lưu" class="btn btn-primary" />
                                            <a href="~/Admin/Admin/getListService"><input type="button" value="Hủy" class="btn btn-primary" /></a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>