@model DichVuThueXe.Models.NhanVien

@{
    ViewBag.Title = "DeleteNhanVien";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container"  class="row" style="padding-left: 5%; padding-top: 2%">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="font-weight:bold; font-size:20px">
                    <img src="~/images/base/error.png" width="25" />
                    Xem lại thông tin trước khi xoá
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">

                            <div>
                                <table class="table">
                                    <tr>
                                        <td>
                                            Mã Nhân Viên
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.MaNV)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Tên Nhân Viên
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.TenNV)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Mật Khẩu
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.MatKhau)
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            Quyền Sử Dụng
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.QuyenSD)
                                        </td>
                                    </tr>
                                </table>

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Xóa" class="btn btn-primary" />
                                            <a href="~/Admin/Admin/DSNhanVien"><input type="button" value="Hủy" class="btn btn-primary" /></a>
                                        </div>
                                    </div>
                                }
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
</div>