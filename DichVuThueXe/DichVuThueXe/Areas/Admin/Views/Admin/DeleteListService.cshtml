@model DichVuThueXe.Models.DichVu
@{
    ViewBag.Title = "DeleteListService";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    <div class="row" style="padding-left: 5%; padding-top: 2%">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading" style="font-weight:bold; font-size:20px">
                    <img src="~/images/base/error.png" width="25" />
                    Xem lại thông tin trước khi xoá
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div>
                                <table class="table">
                                    <tr>
                                        <td>
                                            Tên Dịch Vụ
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Ten)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Giá
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.Gia)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Ngày Bắt Đầu
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.NgayBD)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Ngày Kết Thúc
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.NgayKT)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Mã Tỉnh
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.MaTinh)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Mã Xe
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.MaXe)
                                        </td>
                                    </tr>
                                </table>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Xóa" class="btn btn-primary" />
                                            <a href="~/Admin/Admin/getListService"><input type="button" value="Hủy" class="btn btn-primary" /></a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>

