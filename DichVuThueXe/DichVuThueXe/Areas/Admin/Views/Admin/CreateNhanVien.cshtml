@model DichVuThueXe.Models.NhanVien

@{
    ViewBag.Title = "CreateNhanVien";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div style="padding-top : 2%">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header" style="color:cornflowerblue;">THÊM NHÂN VIÊN MỚI</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading" style="font-weight:bold; font-size:20px">
                        Thông tin Nhân viên
                    </div>
                    <div class="panel-heading" style="font-weight:bold; font-size:20px">
                        @if (ViewBag.ThongBao != null)
                        {
                            <div class="form-group">
                                <h3>@ViewBag.ThongBao</h3>
                            </div>
                        }
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-6">

                                @using (Html.BeginForm("CreateNhanVien", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <label class="text">
                                                MÃ NHÂN VIÊN
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.MaNV, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mã Nhân Viên" } })
                                                @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                TÊN NHÂN VIÊN
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên Nhân Viên" } })
                                                @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                MẬT KHẨU ĐĂNG NHẬP
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control", @placeholder = "Mật Khẩu" } })
                                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="text">
                                                QUYỀN SỬ DỤNG
                                            </label>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.QuyenSD, new { htmlAttributes = new { @class = "form-control", @placeholder = "Quyền Sử Dụng" } })
                                                @Html.ValidationMessageFor(model => model.QuyenSD, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Thêm mới" class="btn btn-primary" />
                                                <a href="~/Admin/Admin/DSNhanVien"><input type="button" value="Hủy" class="btn btn-primary" /></a>
                                            </div>
                                        </div>
                                    </div>
                                }


                            </div>
                            <!-- /.row (nested) -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->
        </div>
    </div>
</div>

