@model PagedList.IPagedList<DichVu>
@using PagedList.Mvc;
@using DichVuThueXe.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="Keywords" content="Bootstrap Registration Form, Responsive Registration Form Templates, Bootstrap Registration Form Templates." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,200;0,300;0,400;1,200&display=swap" rel="stylesheet">
    <link href="~/Assets/dist/css/Graphic.css" rel="stylesheet" />
    <style>
        #cot {
            position: inherit;
        }

        .gioithieu {
            background-color: #2B3467;
        }
    </style>
</head>
<body>
    <br /><br /><br /><br /><br /><br /><br /><br />
    <main class="main">
        <img src="~/Content/image/open.png" style="width:100%; height:50%">
        <div class="gioithieu">
            <div class="text-center khoangcach container" id="cot">
                <h1 class="textt-center" style="text-shadow: white 5px 6px 10px; color:antiquewhite">ĐỒNG HÀNH CÙNG BẠN TRÊN MỌI CHUYẾN ĐI</h1>
                <p class="text-center" style="font-size:25px; text-align:left; color:antiquewhite">
                    <span class="text-info" style="font-size:30px; color: #EB455F">Thuê xe ôtô đi tỉnh</span>
                    với phương châm “khách hàng là trên hết” luôn nhắc nhở chúng tôi không ngừng hoàn thiện nhằm đem đến khách hàng chất lượng và dịch vụ tốt nhất, Xây dựng một phong cách chuyên nghiệp, phục vụ mọi nhu cầu thuê xe ô tô của khách hàng
                </p>
            </div>
        </div>
            <section class="khoangcach container text-center" id="cot">
                <div>
                    <h1 class="text"><img src="~/Content/image/check.png" width="25" />&nbsp Những lý do bạn nên chọn chúng tôi ?</h1>
                    <div class="khoangcach row">
                        <div class="col-sm-3" id="cot">
                            <img src="~/Content/image/piggy-bank.png" width="100" />
                            <h4 class="text">TIẾT KIỆM</h4>
                            <p style="font-size:20px">Cam kết giá xe luôn rẻ hơn thị trường đến 15%</p>
                        </div>
                        <div class="col-sm-3" id="cot">
                            <img src="~/Content/image/handle-with-care.png" width="100" />
                            <h4 class="text">TRỌN GÓI</h4>
                            <p style="font-size:20px">Cam kết chi phí trọn gói, không phát sinh phụ thu</p>
                        </div>
                        <div class="col-sm-3" id="cot">
                            <img src="~/Content/image/car.png" width="100" />
                            <h4 class="text">CHẤT LƯỢNG</h4>
                            <p style="font-size:20px">Cam kết xe riêng, xe đời mới,an toàn và sang trọng</p>
                        </div>
                        <div class="col-sm-3" id="cot">
                            <img src="~/Content/image/fast-car.png" width="100" />
                            <h4 class="text">NHANH CHÓNG</h4>
                            <p style="font-size:20px">Cam kết đưa đón tận nơi, nhanh chóng, tận tình</p>
                        </div>
                    </div>
                </div>
            </section>
        
        <div class="container">
            <div class="khoangcach">
                <div class="">
                    <h1 class="text text-center"><img src="~/Content/image/sao.png" width="30" />Thuê xe du lịch Cần Thơ - Đà Lạt
                    <img src="~/Content/image/sao.png" width="30" /></h1>
                </div>
                
                <div class="row">
                    <div class="col-sm-6" id="cot">
                        <ul style="font-size:20px">
                            <li>Xe gia đình, không có logo Grab, Taxi, rất sạch sẽ</li>
                            <li>Đưa đón tận nơi tại Cần Thơ và Đà Lạt</li>
                            <li>Tài xế lành nghề, nhiều kinh nghiệm và chuyên nghiệp</li>
                        </ul>
                    </div>
                    <img col col-sm-6 thumbnail" id="cot" src="~/Content/image/giadinh.jpg" width="550" />
                </div>
            </div>
            <div  class="khoangcach">
                <h1 class="text text-center" style="color:#EB455F; font-family:sans-serif"><i>Danh Sách Xe Nổi Bật</i></h1>
            </div>
            <div class="khoangcach text-center" >
                <div class="row">
                    @foreach (var item in Model)
                    {
                    <div class="col col-sm-6 thumbnail" id="cot">
                        <img src="@Url.Content("/Content/images/" + item.Xe.HinhAnhs.First().URL)" style="width:500px; height:400px " />
                        <h1 class="text">@item.Ten</h1>
                        <p style="font-size:20px">@item.Gia VND/Ngay</p>
                        <button class="btn" style="display: inline"><img src="~/Content/image/dienthoai.png" width="30" />Gọi xe 0979.756.123</button>
                        <a href="~/Home/ListService" style="display: inline"><button style="background-color: coral"><img src="~/Content/image/datxe.png" width="30" style="display: inline" />&nbsp; Xem danh sách dịch vụ</button> </a>
                    </div>
                    }
                </div>
            </div>
        </div>
         <script src="~/Assets/dist/js/Graphic.js"></script>
    </main>
</body>
</html>






